pkgname=list-optdeps
pkgver=1.0.0
pkgrel=1
pkgdesc="List optional dependencies of installed packages"
arch=('any')
url="https://github.com/unoxxis/PKGBUILDs"
license=('GPL-3.0-or-later')

depends=(expac)

source=(
    list-optdeps.sh
)

sha256sums=('e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855')

# install="$pkgname.install"

package() {
    install -Dm 0755 list-optdeps.sh "$pkgdir/usr/bin/list-optdeps"
}
