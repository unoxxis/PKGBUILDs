pkgbase=unx-cpu-spec
pkgname=(unx-cpu-intel unx-cpu-amd)
pkgver=1
pkgrel=1
pkgdesc="Unoxxis Metapackage for CPU specific dependencies"
arch=('any')
url="https://github.com/unoxxis/PKGBUILDs"
license=('GPL-3.0-or-later')
groups=(unoxxis-meta)

package_unx-cpu-intel() {
    provides=(unx-cpu-spec)
    conflict=(unx-cpu-amd)
    
    # Microcode
    depends=(intel-ucode)
}

package_unx-cpu-amd() {
    provides=(unx-cpu-spec)
    conflict=(unx-cpu-intel)
    
    # Microcode
    depends=(amd-ucode)
}